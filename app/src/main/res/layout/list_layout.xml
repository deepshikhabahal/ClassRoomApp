<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="20dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#FAFAD2"
    android:elevation="5dp"
    app:cardCornerRadius="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/child_video_artist"
        app:layout_constraintTop_toTopOf="@+id/child_video_artist">

        <ImageView
            android:id="@+id/child_video_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@color/design_default_color_secondary_variant"
            tools:src="@tools:sample/backgrounds/scenic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/child_video_title"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            tools:text="@tools:sample/full_names"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="serif"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@id/child_video_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/child_video_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="serif"
            android:text="@string/about_the_artist"
            android:textColor="#333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/child_video_image"
            app:layout_constraintTop_toBottomOf="@id/child_video_title"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@tools:sample/full_names" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>